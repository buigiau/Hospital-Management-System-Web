<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Doctor Dashboard</title>
	<!-- Bootstrap CSS -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
	<!-- Font Awesome -->
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
	<!-- Custom CSS -->
	<style>
		body {
			font-family: 'Arial', sans-serif;
			background-color: #f8f9fc;
		}

		.sidebar {
			background: linear-gradient(145deg, #338dff, #1a73e8);
			color: #fff;
			height: 100vh;
			position: fixed;
			width: 250px;
			border-radius: 15px;
			box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
			display: flex;
			flex-direction: column;
			justify-content: space-between;
			padding-bottom: 20px;
		}

			.sidebar h4 {
				font-size: 1.5rem;
				text-align: center;
				margin: 20px 0;
				font-weight: bold;
			}

			.sidebar nav {
				flex-grow: 1;
			}

			.sidebar a {
				color: #fff;
				text-decoration: none;
				padding: 10px;
				display: flex;
				align-items: center;
				font-weight: bold;
				border-radius: 5px;
				margin: 5px 20px;
				transition: background-color 0.3s, color 0.3s;
			}

				.sidebar a i {
					margin-right: 10px;
				}

				.sidebar a:hover, .sidebar a.active {
					background-color: #fff;
					color: #338dff;
				}

		.logout {
			text-align: center;
			margin-top: auto;
		}

			.logout a {
				color: #fff;
				font-weight: bold;
				padding: 10px 20px;
				background-color: #ff6b6b;
				border-radius: 5px;
				transition: all 0.3s;
			}

				.logout a:hover {
					background-color: #ff4e4e;
				}
	</style>
</head>
<body>
	<div class="d-flex">
		<!-- Sidebar -->
		<div class="sidebar">
			<h4>Hospital System</h4>
			<nav>
				<a href="#" class="menu-item"><i class="fas fa-home"></i>Dashboard</a>
				<a asp-controller="Appointment" asp-action="Index" class="menu-item"><i class="fas fa-calendar-alt"></i>Appointments</a>
				<a href="#" class="menu-item"><i class="fas fa-user"></i>Patients</a>
				<a asp-controller="Treatment" asp-action="Index" class="menu-item"><i class="fas fa-credit-card"></i>Treatments</a>
				<a asp-controller="Prescription" asp-action="Index" class="menu-item"><i class="fas fa-ambulance"></i>Prescriptions</a>
				<a href="#" class="menu-item"><i class="fas fa-cog"></i>Settings</a>
			</nav>
			<div class="logout">
				<a asp-controller="User" asp-action="Logout" asp-area=""><i class="fas fa-sign-out-alt"></i> Log Out</a>
			</div>
		</div>
	</div>
	<div>@RenderBody()</div>	
	<!-- Bootstrap JS -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
	<!-- Chart.js -->
	<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
	<script>
		// Lấy tất cả các menu items
		const menuItems = document.querySelectorAll('.menu-item');

		// Thêm sự kiện click cho từng menu item
		menuItems.forEach(item => {
			item.addEventListener('click', function () {
				// Loại bỏ lớp active khỏi tất cả menu items
				menuItems.forEach(el => el.classList.remove('active'));

				// Thêm lớp active vào menu item được click
				this.classList.add('active');
			});
		});
	</script>
</body>
</html>
