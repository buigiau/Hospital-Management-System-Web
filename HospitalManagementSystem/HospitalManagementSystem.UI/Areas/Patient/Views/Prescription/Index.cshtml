@foreach (var prescription in Model)
{
    <div class="container mt-4">
        <div class="card">
            <!-- Card Header with background color and white text -->
            <div class="card-header bg-success text-white">
                <h5>Treatment: @prescription.Title</h5>
            </div>
            <div class="card-body">
                <!-- Medication Name with default text color -->
                <p><strong class="text-dark">Medication Name:</strong> @prescription.MedicationName</p>
                <!-- Dosage with default text color -->
                <p><strong class="text-dark">Dosage:</strong> @prescription.Dosage</p>
                <!-- Instruction in red text color -->
                <p><strong class="text-danger">Instruction:</strong> @prescription.Instruction</p>
                <!-- Treatment Date with default text color -->
                <p><strong class="text-dark">Treatment Date:</strong> @prescription.TreatmentDate.ToString("dd/MM/yyyy")</p>
                <!-- Doctor name with default text color -->
                <p><strong class="text-dark">Doctor:</strong> @prescription.DoctorFullName</p>
            </div>
            <!-- Card footer to emphasize additional info -->
            <div class="card-footer bg-light">
                <small class="text-muted">This treatment is provided with care.</small>
            </div>
        </div>
    </div>
}
