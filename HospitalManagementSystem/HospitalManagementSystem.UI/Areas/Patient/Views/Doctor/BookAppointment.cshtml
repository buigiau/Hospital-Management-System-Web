@model AppointmentCreateDTO

@{
    ViewData["Title"] = "Book Appointment";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<form asp-action="SubmitAppointment" method="post">
    <div class="form-group">
        <label for="DoctorName">Doctor</label>
        <input type="text" class="form-control" id="DoctorName" name="DoctorName" value="@Model.DoctorName" readonly />
    </div>

    <div class="form-group">
        <label for="AppointmentDate">Appointment Date</label>
        <input type="datetime-local" class="form-control" id="AppointmentDate" name="AppointmentDate" value="@Model.AppointmentDate.ToString("yyyy-MM-ddTHH:mm")" required />
    </div>

    <div class="form-group">
        <label for="Notes">Notes</label>
        <textarea class="form-control" id="Notes" name="Notes" rows="4">@Model.Notes</textarea>
    </div>
    <div class="form-group">
        <label for="Notes">DoctorID</label>
        <textarea class="form-control" id="Notes" name="Notes" rows="4">@Model.DoctorID</textarea>
    </div>

    <!-- PatientID hidden field -->
    <input type="hidden" name="PatientID" value="@Model.PatientID" />

    <button type="submit" class="btn btn-primary">Book Appointment</button>
</form>

<div class="mt-4">
    <a href="@Url.Action("Index", "Home")">Back to Home</a>
</div>
