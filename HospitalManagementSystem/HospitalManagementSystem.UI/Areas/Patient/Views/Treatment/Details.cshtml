@model dynamic

<h2 class="text-center text-primary">Treatment Details</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h4>Treatment Information</h4>
            <p><strong>Treatment Date:</strong> @Model.TreatmentDate.ToString("dd/MM/yyyy")</p>
            <p><strong>Doctor:</strong> @Model.DoctorFullName</p>
            <p><strong>Treatment Details:</strong> @Model.TreatmentDetail</p>
            <p><strong>Follow-Up Date:</strong> @Model.FollowUpDate?.ToString("dd/MM/yyyy")</p>
        </div>
        <div class="col-md-6">
            <!-- You can add additional information or controls here if needed -->
        </div>
    </div>
</div>

<a href="@Url.Action("Index", new { patientId = ViewData["PatientId"] })" class="btn btn-primary">Back to Treatment List</a>
