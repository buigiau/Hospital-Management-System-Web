@model IEnumerable<dynamic>

<h2 class="mt-4 text-center" style="font-family: 'Arial', sans-serif; font-size: 36px; font-weight: bold; color: #2a5d84;">Treatment List</h2>

<table class="table table-striped table-hover table-bordered" style="width: 95%; margin: 20px auto; background-color: #f8f9fa;">
    <thead class="table-dark text-center">
        <tr>
            <th scope="col" class="text-warning" style="font-size: 18px;">Treatment Date</th>
            <th scope="col" class="text-warning" style="font-size: 18px;">Attending Doctor</th>
            <th scope="col" class="text-warning" style="font-size: 18px;">Follow-Up Date</th>
            <th scope="col" class="text-warning" style="font-size: 18px;">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var treatment in Model)
        {
            <tr>
                <!-- Treatment Date Color Updated to Orange -->
                <td class="text-center" style="font-size: 16px; color: #ff8c00;">@treatment.TreatmentDate.ToString("dd/MM/yyyy")</td>

                <!-- Attending Doctor Color Left as Green -->
                <td class="text-center text-success" style="font-size: 16px; color: #28a745;">@treatment.DoctorFullName</td>

                <!-- Follow-Up Date Color Updated to Purple -->
                <td class="text-center" style="font-size: 16px; color: #8a2be2;">@treatment.FollowUpDate?.ToString("dd/MM/yyyy")</td>

                <!-- Action Button -->
                <td class="text-center">
                    <a href="@Url.Action("Details", "Treatment", new { treatmentId = treatment.TreatmentID })" class="btn btn-outline-primary btn-sm">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
