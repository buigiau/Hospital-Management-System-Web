@model HospitalManagementSystem.Core.DTO.TreatmentDTO

@{
    ViewData["Title"] = "Delete Treatment";
}

<h2>Delete Treatment</h2>

<p>Are you sure you want to delete this treatment?</p>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Treatment Title
        </dt>
        <dd class="col-sm-10">
            @Model.TreatmentTitle
        </dd>
        <dt class="col-sm-2">
            Treatment Date
        </dt>
        <dd class="col-sm-10">
            @Model.TreatmentDate?.ToString("dd/MM/yyyy")
        </dd>
        <dt class="col-sm-2">
            Follow Up Date
        </dt>
        <dd class="col-sm-10">
            @Model.FollowUpDate?.ToString("dd/MM/yyyy")
        </dd>
        <dt class="col-sm-2">
            Doctor
        </dt>
        <dd class="col-sm-10">
            @Model.DoctorFullName
        </dd>
        <dt class="col-sm-2">
            Patient
        </dt>
        <dd class="col-sm-10">
            @Model.PatientFullName
        </dd>
        <dt class="col-sm-2">
            Details
        </dt>
        <dd class="col-sm-10">
            @Model.TreatmentDetail
        </dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post" asp-route-id="@Model.TreatmentID">
    <input type="hidden" asp-for="TreatmentID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
