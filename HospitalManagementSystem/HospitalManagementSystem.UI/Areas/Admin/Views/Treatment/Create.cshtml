@model TreatmentDTO

@{
    ViewData["Title"] = "Create Treatment";
}

<h1>Create Treatment</h1>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <!-- Treatment Title -->
    <div class="form-group">
        <label asp-for="TreatmentTitle" class="control-label"></label>
        <input name="TreatmentTitle" class="form-control" />
        <span asp-validation-for="TreatmentTitle" class="text-danger"></span>
    </div>

    <!-- Treatment Detail -->
    <div class="form-group">
        <label asp-for="TreatmentDetail" class="control-label"></label>
        <textarea name="TreatmentDetail" class="form-control"></textarea>
        <span asp-validation-for="TreatmentDetail" class="text-danger"></span>
    </div>

    <!-- Treatment Date -->
    <div class="form-group">
        <label asp-for="TreatmentDate" class="control-label"></label>
        <input name="TreatmentDate" class="form-control" type="date" />
        <span asp-validation-for="TreatmentDate" class="text-danger"></span>
    </div>

    <!-- Follow-up Date -->
    <div class="form-group">
        <label asp-for="FollowUpDate" class="control-label"></label>
        <input name="FollowUpDate" class="form-control" type="date" />
        <span asp-validation-for="FollowUpDate" class="text-danger"></span>
    </div>

    <!-- Doctor Selection -->
    <div class="form-group">
        <label asp-for="DoctorID" class="control-label"></label>
        <select name="DoctorID" class="form-control">
            <option value="">-- Select Doctor --</option>
            @foreach (var doctor in ViewData["Doctors"] as List<Doctor>)
            {
                <option value="@doctor.DoctorID">@doctor.FirstName @doctor.LastName</option>
            }
        </select>
        <span asp-validation-for="DoctorID" class="text-danger"></span>
    </div>

    <!-- Patient Selection -->
    <div class="form-group">
        <label asp-for="PatientID" class="control-label"></label>
        <select name="PatientID" class="form-control">
            <option value="">-- Select Patient --</option>
            @foreach (var patient in ViewData["Patients"] as List<Patient>)
            {
                <option value="@patient.PatientID">@patient.FirstName @patient.LastName</option>
            }
        </select>
        <span asp-validation-for="PatientID" class="text-danger"></span>
    </div>

    <!-- Submit Button -->
    <button type="submit" class="btn btn-primary">Create</button>
</form>

<br />
<a href="@Url.Action("Index")">Back to List</a>

@section Scripts {
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate.unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}
