@model IEnumerable<Treatment>

@{
    ViewData["Title"] = "Treatments";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<!-- Table hiển thị danh sách các department -->
<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>#</th> <!-- Cột số thứ tự -->
            <th>Treatment Title</th>
            <th>Doctor Name</th>
            <th>Patient Name</th>
            <th>FollowUpDate</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var (treatment, index) in Model.Select((value, i) => (value, i)))
        {
            <tr>
                <td>@(index + 1)</td> <!-- Số thứ tự -->
                <td>@treatment.Title</td>
                <td>@treatment.Doctor.FirstName @treatment.Doctor.LastName</td>
                <td>@treatment.Patient.FirstName @treatment.Patient.LastName</td>
                <td>@treatment.FollowUpDate</td>
                <td>
                    <!-- Nút Edit -->
                    <a href="@Url.Action("Edit", new { id = treatment.TreatmentID })" class="btn btn-sm btn-primary">Edit</a>

                    <!-- Nút Delete -->
                    <a href="@Url.Action("Delete", new { id = treatment.TreatmentID })" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
