@model IEnumerable<DoctorDTO>
@{
	ViewData["Title"] = "Doctor List";
}
<style>
	.doctor-card {
		border: 1px solid #e0e0e0;
		border-radius: 10px;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
		padding: 20px;
		text-align: center;
		background-color: #ffffff;
	}

		.doctor-card img {
			width: 100px;
			height: 100px;
			border-radius: 50%;
			margin-bottom: 15px;
		}

		.doctor-card h5 {
			font-size: 18px;
			font-weight: bold;
			margin-bottom: 10px;
		}

		.doctor-card p {
			font-size: 14px;
			color: #666;
			margin-bottom: 15px;
		}

		.doctor-card .social-icons a {
			margin: 0 5px;
			color: #007bff;
			font-size: 16px;
		}

		.doctor-card .btn {
			background-color: #007bff;
			color: white;
			border: none;
			border-radius: 20px;
			padding: 10px 20px;
		}

			.doctor-card .btn:hover {
				background-color: #0056b3;
			}
</style>
<h2>Doctor List</h2>
<div class="container py-5">
	<div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
		<!-- Doctor Card Start -->
		@foreach (var doctor in Model)
		{
			<div class="col">
				<div class="doctor-card">
					@if (doctor.Gender == 0)
					{
						<img src="~/img/doctor.png" alt="Profile Image" />
					}
					else
					{
						<img src="~/img/doctor (1).png" alt="Profile Image" />
					}
					<h5>@doctor.FirstName @doctor.LastName</h5>
					<p>@doctor.PhoneNumber</p>
					<p>@doctor.Email</p>
					<div class="social-icons">
						<a href="#"><i class="fa-brands fa-facebook"></i></a>
						<a href="#"><i class="fa-brands fa-twitter"></i></a>
						<a href="#"><i class="fa-brands fa-instagram"></i></a>
					</div>
					<a href="@Url.Action("Details", "Doctor", new { id = doctor.DoctorID })" class="btn mt-3">View Profile</a>
				</div>
			</div>
		}
	</div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


