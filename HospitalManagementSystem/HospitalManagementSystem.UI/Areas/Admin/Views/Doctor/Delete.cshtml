@model DoctorDTO

@{
    ViewData["Title"] = "Delete Doctor";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<!-- Card wrapper for the form -->
<div class="card shadow-lg p-4">
    <!-- Cảnh báo xóa -->
    <div class="alert alert-danger" role="alert">
        <strong>Warning!</strong> Are you sure you want to delete this doctor <strong>@Model.FirstName @Model.LastName</strong>?
    </div>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()

        <!-- Display information about the doctor -->
        <div class="row">
            <div class="col-md-6 form-group">
                <label for="FirstName" class="font-weight-bold text-primary">First Name</label>
                <p class="form-control-plaintext">@Model.FirstName</p>
            </div>
            <div class="col-md-6 form-group">
                <label for="LastName" class="font-weight-bold text-primary">Last Name</label>
                <p class="form-control-plaintext">@Model.LastName</p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 form-group">
                <label for="Gender" class="font-weight-bold text-primary">Gender</label>
                <p class="form-control-plaintext">@Model.Gender</p>
            </div>
            <div class="col-md-6 form-group">
                <label for="DateOfBirth" class="font-weight-bold text-primary">Date of Birth</label>
                <p class="form-control-plaintext">@Model.DateOfBirth</p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 form-group">
                <label for="Email" class="font-weight-bold text-primary">Email</label>
                <p class="form-control-plaintext">@Model.Email</p>
            </div>
            <div class="col-md-6 form-group">
                <label for="PhoneNumber" class="font-weight-bold text-primary">Phone Number</label>
                <p class="form-control-plaintext">@Model.PhoneNumber</p>
            </div>
        </div>

        <div class="form-group">
            <label for="Address" class="font-weight-bold text-primary">Address</label>
            <p class="form-control-plaintext">@Model.Address</p>
        </div>

        <!-- Action buttons -->
        <div class="form-group text-center">
            <button type="submit" class="btn btn-danger btn-lg mr-2">Delete</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg">Cancel</a>
        </div>
    </form>
</div>
