@model DoctorDTO

@{
    ViewData["Title"] = "Delete Doctor";
}

<h1>@ViewData["Title"]</h1>

<!-- Cảnh báo xóa -->
<div class="alert alert-danger" role="alert">
    <strong>Warning!</strong> Are you sure you want to delete this doctor <strong>@Model.FirstName</strong>?
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()

    <!-- Hiển thị thông tin cần xóa -->
    <div class="form-group">
        <!-- Label in đậm và màu xanh -->
        <label for="Name" class="font-weight-bold text-primary">First Name</label>
        <p class="form-control-plaintext">@Model.FirstName</p>
    </div>

    <div class="form-group">
        <!-- Label in đậm và màu xanh -->
        <label for="Description" class="font-weight-bold text-primary">Last Name</label>
        <p class="form-control-plaintext">@Model.LastName</p>
    </div>
    <div class="form-group">
        <!-- Label in đậm và màu xanh -->
        <label for="Description" class="font-weight-bold text-primary">Description</label>
        <p class="form-control-plaintext">@Model.Gender</p>
    </div>

        <div class="form-group">
        <!-- Label in đậm và màu xanh -->
        <label for="Description" class="font-weight-bold text-primary">Description</label>
        <p class="form-control-plaintext">@Model.DateOfBirth</p>
    </div>

        <div class="form-group">
        <!-- Label in đậm và màu xanh -->
        <label for="Description" class="font-weight-bold text-primary">Description</label>
        <p class="form-control-plaintext">@Model.Email</p>
    </div>
        <div class="form-group">
        <!-- Label in đậm và màu xanh -->
        <label for="Description" class="font-weight-bold text-primary">Description</label>
        <p class="form-control-plaintext">@Model.PhoneNumber</p>
    </div>

        <div class="form-group">
        <!-- Label in đậm và màu xanh -->
        <label for="Description" class="font-weight-bold text-primary">Description</label>
        <p class="form-control-plaintext">@Model.Address</p>
    </div>

    <!-- Nút Xóa -->
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>
