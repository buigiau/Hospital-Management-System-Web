@model IEnumerable<Prescription>

@{
    ViewData["Title"] = "Prescriptions";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<!-- Table hiển thị danh sách các department -->
<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>#</th> <!-- Cột số thứ tự -->
            <th>Treatment Title</th>
            <th>Medication Name</th>
            <th>Dosage</th>
            <th>Instruction</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var (prescription, index) in Model.Select((value, i) => (value, i)))
        {
            <tr>
                <td>@(index + 1)</td> <!-- Số thứ tự -->
                <td>@prescription.MedicationName</td>
                <td>@prescription.Dosage</td>
                <td>@prescription.Instruction</td>
                <td>@prescription.Treatment.Title</td>
                <td>
                    <!-- Nút Edit -->
                    <a href="@Url.Action("Edit", new { id = prescription.PresciptionID })" class="btn btn-sm btn-primary">Edit</a>

                    <!-- Nút Delete -->
                    <a href="@Url.Action("Delete", new { id = prescription.PresciptionID })" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
