@model Prescription

@{
    ViewData["Title"] = "Delete Prescription";
}

<h1>Delete Prescription</h1>

<div>
    <h4>Are you sure you want to delete this prescription?</h4>
    <dl class="row">
        <dt class="col-sm-2">Treatment</dt>
        <dd class="col-sm-10">@Model.Treatment.Title</dd>

        <dt class="col-sm-2">Medication</dt>
        <dd class="col-sm-10">@Model.MedicationName</dd>

        <dt class="col-sm-2">Dosage</dt>
        <dd class="col-sm-10">@Model.Dosage</dd>

        <dt class="col-sm-2">Instructions</dt>
        <dd class="col-sm-10">@Model.Instruction</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="PresciptionID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
