@model Patient

@{
    ViewData["Title"] = "Delete Patient";
}

<h1 class="text-center">Delete Patient</h1>

<h3 class="text-center">Are you sure you want to delete this patient?</h3>

<div class="container">
    <div class="card">
        <div class="card-header">
            <h4 class="mb-0">Patient Details</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <strong>Name:</strong> @Model.FirstName
                    </div>
                    <div class="form-group">
                        <strong>Age:</strong> @Model.DateOfBirth
                    </div>
                    <div class="form-group">
                        <strong>Gender:</strong> @Model.Gender
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <strong>Email:</strong> @Model.Email
                    </div>
                    <div class="form-group">
                        <strong>Phone:</strong> @Model.PhoneNumber
                    </div>
                    <div class="form-group">
                        <strong>Address:</strong> @Model.Address
                    </div>
                </div>
            </div>

            <form method="post" asp-action="Delete" asp-route-id="@Model.PatientID">
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-danger btn-lg">Yes, delete</button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
