@model PatientDTO

@{
    ViewData["Title"] = "Edit Patient";
}

<h1 class="text-center text-primary">@ViewData["Title"]</h1>

<!-- Hiển thị thông báo lỗi nếu có lỗi -->
@foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
{
    <div class="alert alert-danger">
        @error.ErrorMessage
    </div>
}

<form asp-action="Edit" method="post" class="mx-auto" style="max-width: 600px;">
    <input hidden asp-for="PatientID" value="@Model.PatientID" />
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="FirstName" class="font-weight-bold text-primary">First Name</label>
        <input type="text" class="form-control" id="FirstName" name="FirstName" value="@Model.FirstName" required />
    </div>

    <div class="form-group">
        <label for="LastName" class="font-weight-bold text-primary">Last Name</label>
        <input type="text" class="form-control" id="LastName" name="LastName" value="@Model.LastName" required />
    </div>

    <div class="form-group">
        <label for="Gender" class="font-weight-bold text-primary">Gender</label>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="male" name="Gender" value="0" @(Model.Gender == GenderOptions.Male ? "checked" : "")>
            <label class="form-check-label" for="male">Male</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="female" name="Gender" value="1" @(Model.Gender == GenderOptions.Female ? "checked" : "")>
            <label class="form-check-label" for="female">Female</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="other" name="Gender" value="2" @(Model.Gender == GenderOptions.Other ? "checked" : "")>
            <label class="form-check-label" for="other">Other</label>
        </div>
    </div>

    <div class="form-group">
        <label for="Email" class="font-weight-bold text-primary">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required />
    </div>

    <div class="form-group">
        <label for="DateOfBirth" class="font-weight-bold text-primary">Date of Birth</label>
        <input type="date" class="form-control" id="DateOfBirth" name="DateOfBirth" value="@Model.DateOfBirth.Value.ToString("yyyy-MM-dd")" required />
    </div>

    <div class="form-group">
        <label for="PhoneNumber" class="font-weight-bold text-primary">Phone Number</label>
        <input type="tel" class="form-control" id="PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber" required />
    </div>

    <div class="form-group">
        <label for="Height" class="font-weight-bold text-primary">Height (cm)</label>
        <input type="number" class="form-control" id="Height" name="Height" value="@Model.Height" step="0.01" required />
    </div>

    <div class="form-group">
        <label for="Weight" class="font-weight-bold text-primary">Weight (kg)</label>
        <input type="number" class="form-control" id="Weight" name="Weight" value="@Model.Weight" step="0.1" required />
    </div>

    <div class="form-group">
        <label for="BloodGroup" class="font-weight-bold text-primary">Blood Group</label>
        <input type="text" class="form-control" id="BloodGroup" name="BloodGroup" value="@Model.BloodGroup" required />
    </div>

    <div class="form-group">
        <label for="Address" class="font-weight-bold text-primary">Address</label>
        <textarea class="form-control" id="Address" name="Address" required>@Model.Address</textarea>
    </div>

    <div class="form-group text-center mt-4">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </div>
</form>
