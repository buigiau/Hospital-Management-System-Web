@model Invoice

@{
    ViewData["Title"] = "Delete Invoice";
}

<h1>Delete Invoice</h1>

<p>Are you sure you want to delete this invoice?</p>

<div class="form-group">
    <label><strong>Invoice ID:</strong></label>
    <p>@Model.InvoiceID</p>
</div>

<div class="form-group">
    <label><strong>Treatment Title:</strong></label>
    <p>@Model.Treatment?.Title</p>
</div>

<div class="form-group">
    <label><strong>Amount:</strong></label>
    <p>@Model.Amount</p>
</div>

<div class="form-group">
    <label><strong>Payment Status:</strong></label>
    <p>@Model.PaymentStatus</p>
</div>

<div class="form-group">
    <label><strong>Invoice Date:</strong></label>
    <p>@Model.InvoiceDate.Value.ToString("yyyy-MM-dd")</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="InvoiceID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
